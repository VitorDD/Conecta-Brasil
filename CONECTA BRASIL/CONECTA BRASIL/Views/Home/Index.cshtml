<body>
    <header>
        <div class="header-container">
            <div class="logo-text-container">
                <div class="logo-container">
                    <img src="https://i.pinimg.com/736x/d1/4f/d8/d14fd8e15653d019016704e138309dd6.jpg" alt="Logo" class="logo-img">
                </div>
                <span class="logo-text">Conecta Brasil</span> <!-- Texto ao lado da logo -->
            </div>
            <div class="user-options">
                <a href="@Url.Action("Create", "Publicacao")" class="btn btn-primary">Criar Publicação</a>
                <span class="user-name">@User.Identity.Name</span>
            </div>
        </div>
    </header>

    <div class="container" style="margin-top: 80px;">
        <!-- Ajustar o container para não sobrepor a barra fixa -->
        <div class="row">
            <!-- Sidebar de Categorias -->
            <div class="sidebar">
                <h3>Categorias</h3>
                <ul class="list-group">
                    @foreach (var categoria in Model.Categorias)
                    {
                        <li class="list-group-item @(Model.CategoriaSelecionadaId == categoria.Id ? "active" : "")">
                            <a href="@Url.Action("Index", new { categoriaId = categoria.Id })" style="text-decoration: none; color: black;">
                                @if (categoria.Tipo == "Clima")
                                {
                                    <i class="fas fa-cloud-sun"></i>
                                }
                                else if (categoria.Tipo == "Notícia")
                                {
                                    <i class="fas fa-newspaper"></i>
                                }
                                else if (categoria.Tipo == "Esporte")
                                {
                                    <i class="fas fa-futbol"></i>
                                }
                                else if (categoria.Tipo == "Evento")
                                {
                                    <i class="fas fa-calendar-alt"></i>
                                }
                                else if (categoria.Tipo == "Aviso")
                                {
                                    <i class="fas fa-bell"></i>
                                }

                                @categoria.Tipo
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Publicações no Centro -->
            <div class="col-md-9">
                <h3>Publicações</h3>
                @if (Model.Publicacoes.Any())
                {
                    <div class="list-group">
                        @foreach (var publicacao in Model.Publicacoes)
                        {
                            <div class="list-group-item-publicacao">
                                <p>Criador: @publicacao.Criador?.Name</p>
                                <h4>@publicacao.Titulo</h4>
                                <p class="categorias">
                                    Categoria:
                                    @if (publicacao.PublicacaoCategorias != null && publicacao.PublicacaoCategorias.Any())
                                    {
                                        @foreach (var pubCat in publicacao.PublicacaoCategorias)
                                        {
                                            <span>@pubCat.Categoria.Tipo </span>
                                        }
                                    }
                                    else
                                    {
                                        <span>Nenhuma categoria relacionada.</span>
                                    }
                                </p>
                                <p>@publicacao.Conteudo</p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>Nenhuma publicação disponível.</p>
                }
            </div>
        </div>
    </div>

    <footer>
        © 2024 - CONECTA_BRASIL · <a href="/Privacy">Privacy</a>
    </footer>

</body>
</html>
